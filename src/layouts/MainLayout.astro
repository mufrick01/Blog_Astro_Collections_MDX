---
import ViewTransitions from 'astro/components/ViewTransitions.astro';
import {SiteConfig} from '../site_config/site-config.ts'

interface Props {
    title?: string;
    description?: string;
    image?: string;
}
const { title, description, image } = Astro.props;

const srcImg = image ?? SiteConfig.image
const titlePost = title ?? SiteConfig.title
const descriptionPost = description ?? SiteConfig.description
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <!-- SEO -->
        <meta name="description" content={descriptionPost} />
        <meta name="author" content="mufrick01" />

        <!-- OG:MetaTags -->
        <meta property="og:title" content={titlePost} />
        <meta property="og:description" content={descriptionPost} />
        <meta property="og:image" content={srcImg} />
        <title>{title}</title>
        <ViewTransitions/>
    </head>
    <body class="bg-gray-900 text-gray-200">
        <main class="mb-10 max-w-5xl m-auto p-2">
            <slot />
        </main>
    </body>
</html>
